<!-- Form coffee_order start -->
<%= form_with(model: @coffee_order, local: true) do |f| %>
<!-- Form coffee_order end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for coffee_type_id start -->
  <div class="form-group">
    <%= f.label :coffee_type_id %>

    <!-- Input for coffee_type_id start -->
    <%= f.text_field :coffee_type_id, class: "form-control" %>
    <!-- Input for coffee_type_id end -->
  </div>
  <!-- Label and input for coffee_type_id end -->

  <!-- Label and input for cafe start -->
  <div class="form-group">
    <%= f.label :cafe %>

    <!-- Input for cafe start -->
    <%= f.text_field :cafe, class: "form-control" %>
    <!-- Input for cafe end -->
  </div>
  <!-- Label and input for cafe end -->

  <!-- Label and input for dairy_type_id start -->
  <div class="form-group">
    <%= f.label :dairy_type_id %>

    <!-- Input for dairy_type_id start -->
    <%= f.text_field :dairy_type_id, class: "form-control" %>
    <!-- Input for dairy_type_id end -->
  </div>
  <!-- Label and input for dairy_type_id end -->

  <!-- Label and input for modifications_other start -->
  <div class="form-group">
    <%= f.label :modifications_other %>
    <!-- Input for modifications_other start -->
    <%= f.text_area :modifications_other, rows: "3", class: "form-control" %>
    <!-- Input for modifications_other end -->
  </div>
  <!-- Label and input for modifications_other end -->

  <!-- Label and input for iced start -->
  <div class="form-check">
    <!-- Input for iced start -->
    <%= f.check_box :iced, class: "form-check-input" %>
    <!-- Input for iced end -->
    <%= f.label :iced, class: "form-check-label" %>
  </div>
  <!-- Label and input for iced end -->

  <!-- Label and input for picture start -->
  <div class="form-group">
    <%= f.label :picture %>

    <!-- Input for picture start -->
    <%= f.text_field :picture, class: "form-control" %>
    <!-- Input for picture end -->
  </div>
  <!-- Label and input for picture end -->

  <!-- Label and input for date start -->
  <div class="form-group">
    <%= f.label :date %>

    <!-- Input for date start -->
    <%= f.date_select :date, class: "form-control" %>
    <!-- Input for date end -->
  </div>
  <!-- Label and input for date end -->

  <!-- Label and input for rating start -->
  <div class="form-group">
    <%= f.label :rating %>

    <!-- Input for rating start -->
    <%= f.text_field :rating, class: "form-control" %>
    <!-- Input for rating end -->
  </div>
  <!-- Label and input for rating end -->

  <%= f.submit "Create coffee order", class: "btn btn-block btn-outline-secondary" %>
<% end %>
